<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baibhab.myrestaurant.layer3"
    android:orientation="vertical"
    android:background="#cf52b4"
    android:layout_weight="4">

    <Button
        android:id="@+id/layer3option1_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        android:layout_weight="1.4"
        android:background="#a8a7cd"
        android:gravity="center"
        android:text="Option1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/layer3option2_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1.4"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/layer3option3_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1.4"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/layer3option4_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1.2"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

</LinearLayout>