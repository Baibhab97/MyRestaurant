<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baibhab.myrestaurant.MainActivity"
    android:orientation="vertical"
    android:layout_weight="5"
    android:background="#cf52b4">


    <Button
        android:id="@+id/option1_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/lunch_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5sp"
        android:text="Lunch/Dinner"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#A8A7CD"/>

    <Button
        android:id="@+id/option2_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/breakfast_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        android:text="Breakfast"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#A8A7CD"/>

    <Button
        android:id="@+id/option3_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Option3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/back1_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:background="#A8A7CD"
        android:gravity="center"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

</LinearLayout>